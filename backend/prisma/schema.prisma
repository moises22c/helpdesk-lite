datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  REQUESTER
  AGENT
  ADMIN
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

enum TicketPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

model User {
  id           String   @id @default(cuid())
  name         String
  email        String   @unique
  passwordHash String
  role         Role     @default(REQUESTER)
  createdAt    DateTime @default(now())

  // Relaciones con nombre (esto está perfecto)
  requestedTickets Ticket[] @relation("RequesterTickets")
  assignedTickets  Ticket[] @relation("AssignedTickets")
  
  // Estas relaciones necesitan ser recíprocas en los otros modelos
  comments         TicketComment[]
  events           TicketEvent[]
}

model Ticket {
  id           String         @id @default(cuid())
  title        String
  description  String
  status       TicketStatus   @default(OPEN)
  priority     TicketPriority @default(MEDIUM)
  category     String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  requesterId  String
  requester    User           @relation("RequesterTickets", fields: [requesterId], references: [id])

  assignedToId String?
  assignedTo   User?          @relation("AssignedTickets", fields: [assignedToId], references: [id])

  comments     TicketComment[]
  events       TicketEvent[]

  @@index([status])
  @@index([priority])
  @@index([category])
}

model TicketComment {
  id        String   @id @default(cuid())
  body      String
  createdAt DateTime @default(now())

  ticketId  String
  ticket    Ticket   @relation(fields: [ticketId], references: [id])

  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

model TicketEvent {
  id        String   @id @default(cuid())
  type      String
  metadata  Json
  createdAt DateTime @default(now())

  ticketId  String
  ticket    Ticket   @relation(fields: [ticketId], references: [id])

  actorId   String
  actor     User     @relation(fields: [actorId], references: [id])

  @@index([ticketId])
}